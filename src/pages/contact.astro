---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Contact — DRB Avocats"
  description="Contactez le cabinet DRB Avocats à Cherbourg. Prenez rendez-vous avec Anne Rabaey ou Caroline Bot."
  currentPath="/contact"
>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-navy">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
        Contact
      </p>
      <h1
        class="text-4xl lg:text-5xl font-display font-light text-white leading-tight max-w-3xl"
      >
        Prenez<br />
        <span class="font-medium">rendez-vous</span>
      </h1>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="py-32 bg-cream">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
        <!-- Coordonnées -->
        <div>
          <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
            Nos coordonnées
          </p>
          <h2
            class="text-3xl lg:text-4xl font-display font-light text-navy leading-tight mb-8"
          >
            Comment nous<br />
            <span class="font-medium">joindre ?</span>
          </h2>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <span class="w-px h-16 bg-gold/30 flex-shrink-0"></span>
              <div>
                <p
                  class="text-xs tracking-wider uppercase text-charcoal/40 mb-2"
                >
                  Adresse
                </p>
                <p class="text-navy font-medium">DRB Avocats</p>
                <p class="text-charcoal/70">3, rue de l'Alma - 1er étage</p>
                <p class="text-charcoal/70">50102 Cherbourg-en-Cotentin</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <span class="w-px h-12 bg-gold/30 flex-shrink-0"></span>
              <div>
                <p
                  class="text-xs tracking-wider uppercase text-charcoal/40 mb-2"
                >
                  Téléphone
                </p>
                <a
                  href="tel:0233941355"
                  class="text-lg font-display text-navy hover:text-gold transition-colors"
                >
                  02 33 94 13 55
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <span class="w-px h-12 bg-gold/30 flex-shrink-0"></span>
              <div>
                <p
                  class="text-xs tracking-wider uppercase text-charcoal/40 mb-2"
                >
                  Email
                </p>
                <a
                  href="mailto:dr.avocats@orange.fr"
                  class="text-navy hover:text-gold transition-colors"
                >
                  dr.avocats@orange.fr
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <span class="w-px h-12 bg-gold/30 flex-shrink-0"></span>
              <div>
                <p
                  class="text-xs tracking-wider uppercase text-charcoal/40 mb-2"
                >
                  Horaires
                </p>
                <p class="text-navy font-medium">Lundi - Vendredi</p>
                <p class="text-charcoal/70">9h30 - 12h00 | 14h00 - 17h00</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Formulaire -->
        <div>
          <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
            Formulaire
          </p>
          <h2
            class="text-3xl lg:text-4xl font-display font-light text-navy leading-tight mb-8"
          >
            Envoyez-nous<br />
            <span class="font-medium">un message</span>
          </h2>

          <form id="contact-form" class="bg-white p-8 border border-sand/50">
            <!-- Message de succès/erreur -->
            <div id="form-message" class="hidden mb-6 p-4 text-sm"></div>

            <div class="space-y-5">
              <div class="grid sm:grid-cols-2 gap-5">
                <div>
                  <label
                    for="name"
                    class="block text-xs tracking-wider uppercase text-charcoal/60 mb-2"
                  >
                    Nom <span class="text-gold">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-cream/50 border border-sand/50 text-navy placeholder:text-charcoal/30 focus:outline-none focus:border-gold transition-colors"
                    placeholder="Votre nom"
                  />
                </div>
                <div>
                  <label
                    for="email"
                    class="block text-xs tracking-wider uppercase text-charcoal/60 mb-2"
                  >
                    Email <span class="text-gold">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-cream/50 border border-sand/50 text-navy placeholder:text-charcoal/30 focus:outline-none focus:border-gold transition-colors"
                    placeholder="votre@email.fr"
                  />
                </div>
              </div>

              <div class="grid sm:grid-cols-2 gap-5">
                <div>
                  <label
                    for="phone"
                    class="block text-xs tracking-wider uppercase text-charcoal/60 mb-2"
                  >
                    Téléphone
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 bg-cream/50 border border-sand/50 text-navy placeholder:text-charcoal/30 focus:outline-none focus:border-gold transition-colors"
                    placeholder="06 00 00 00 00"
                  />
                </div>
                <div>
                  <label
                    for="subject"
                    class="block text-xs tracking-wider uppercase text-charcoal/60 mb-2"
                  >
                    Sujet
                  </label>
                  <select
                    id="subject"
                    name="subject"
                    class="w-full px-4 py-3 bg-cream/50 border border-sand/50 text-navy focus:outline-none focus:border-gold transition-colors"
                  >
                    <option value="">Sélectionnez un sujet</option>
                    <option value="Prise de rendez-vous"
                      >Prise de rendez-vous</option
                    >
                    <option value="Droit de la famille"
                      >Droit de la famille</option
                    >
                    <option value="Droit pénal">Droit pénal</option>
                    <option value="Droit immobilier">Droit immobilier</option>
                    <option value="Responsabilité civile"
                      >Responsabilité civile</option
                    >
                    <option value="Autre">Autre</option>
                  </select>
                </div>
              </div>

              <div>
                <label
                  for="message"
                  class="block text-xs tracking-wider uppercase text-charcoal/60 mb-2"
                >
                  Message <span class="text-gold">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 bg-cream/50 border border-sand/50 text-navy placeholder:text-charcoal/30 focus:outline-none focus:border-gold transition-colors resize-none"
                  placeholder="Décrivez brièvement votre situation..."
                ></textarea>
              </div>

              <button
                type="submit"
                id="submit-btn"
                class="w-full px-6 py-4 bg-gold text-navy font-medium text-sm tracking-wide hover:bg-gold-light transition-all duration-300 flex items-center justify-center gap-2"
              >
                <span id="btn-text">Envoyer le message</span>
                <svg
                  id="btn-spinner"
                  class="hidden w-5 h-5 animate-spin"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
              </button>
            </div>

            <p class="text-xs text-charcoal/40 mt-4 text-center">
              Les champs marqués d'un <span class="text-gold">*</span> sont obligatoires
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Cabinet -->
  <section class="py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
        <div>
          <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
            Le cabinet
          </p>
          <h2
            class="text-3xl lg:text-4xl font-display font-light text-navy leading-tight mb-8"
          >
            Situé au cœur de<br />
            <span class="font-medium">Cherbourg</span>
          </h2>
          <p class="text-charcoal/60 leading-relaxed mb-8">
            Notre cabinet vous accueille au 3 rue de l'Alma, au premier étage,
            dans un cadre professionnel et confidentiel propice aux échanges.
          </p>
          <div class="flex items-center gap-2 text-sm text-charcoal/40">
            <span class="w-2 h-2 rounded-full bg-gold"></span>
            <span>Accès facile en centre-ville</span>
          </div>
        </div>

        <div class="relative">
          <div class="aspect-[4/3] overflow-hidden">
            <img
              src="https://le-de.cdn-website.com/e7b4430ff46446b59fbb67b6af12a95d/dms3rep/multi/opt/IMG_20210922_154743-1920w.jpg"
              alt="Cabinet DRB Avocats à Cherbourg"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Équipe CTA -->
  <section class="py-32 bg-navy text-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-20">
        <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
          L'équipe
        </p>
        <h2 class="text-3xl lg:text-4xl font-display font-light">
          Qui souhaitez-vous<br />
          <span class="font-medium">rencontrer ?</span>
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <a
          href="/anne-rabaey"
          class="group p-10 bg-white/5 hover:bg-white/10 transition-colors"
        >
          <p class="text-gold text-xs tracking-wider uppercase mb-2">
            Avocat & Médiateur
          </p>
          <h3
            class="text-xl font-display font-medium text-white mb-3 group-hover:text-gold transition-colors"
          >
            Anne Rabaey
          </h3>
          <p class="text-white/50 text-sm mb-6">
            Droit de la famille, droit pénal, droit immobilier
          </p>
          <span
            class="inline-flex items-center gap-2 text-sm text-white/60 group-hover:text-gold transition-colors"
          >
            Voir le profil
            <svg
              class="w-4 h-4 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>

        <a
          href="/caroline-bot"
          class="group p-10 bg-white/5 hover:bg-white/10 transition-colors"
        >
          <p class="text-gold text-xs tracking-wider uppercase mb-2">
            Avocat • Ancien Bâtonnier
          </p>
          <h3
            class="text-xl font-display font-medium text-white mb-3 group-hover:text-gold transition-colors"
          >
            Caroline Bot
          </h3>
          <p class="text-white/50 text-sm mb-6">
            Responsabilité civile, droit pénal routier, droit bancaire
          </p>
          <span
            class="inline-flex items-center gap-2 text-sm text-white/60 group-hover:text-gold transition-colors"
          >
            Voir le profil
            <svg
              class="w-4 h-4 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const formMessage = document.getElementById("form-message") as HTMLDivElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const btnText = document.getElementById("btn-text") as HTMLSpanElement;
  const btnSpinner = document.getElementById("btn-spinner") as HTMLElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Désactiver le bouton et afficher le spinner
    submitBtn.disabled = true;
    btnText.textContent = "Envoi en cours...";
    btnSpinner.classList.remove("hidden");
    formMessage.classList.add("hidden");

    const formData = new FormData(form);
    const data = {
      name: formData.get("name"),
      email: formData.get("email"),
      phone: formData.get("phone"),
      subject: formData.get("subject"),
      message: formData.get("message"),
    };

    try {
      const response = await fetch("/api/contact", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        formMessage.className =
          "mb-6 p-4 text-sm bg-green-50 text-green-800 border border-green-200";
        formMessage.textContent =
          result.message ||
          "Votre message a bien été envoyé. Nous vous répondrons dans les plus brefs délais.";
        form.reset();
      } else {
        formMessage.className =
          "mb-6 p-4 text-sm bg-red-50 text-red-800 border border-red-200";
        formMessage.textContent =
          result.error || "Une erreur est survenue. Veuillez réessayer.";
      }
    } catch {
      formMessage.className =
        "mb-6 p-4 text-sm bg-red-50 text-red-800 border border-red-200";
      formMessage.textContent =
        "Impossible de contacter le serveur. Veuillez réessayer plus tard.";
    } finally {
      // Réactiver le bouton
      submitBtn.disabled = false;
      btnText.textContent = "Envoyer le message";
      btnSpinner.classList.add("hidden");
      formMessage.classList.remove("hidden");
    }
  });
</script>
