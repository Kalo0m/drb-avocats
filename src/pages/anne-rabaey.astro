---
import BaseLayout from "../layouts/BaseLayout.astro";

const domaines = [
  {
    title: "Droit de la famille",
    subtitle: "Divorce & séparation",
    description:
      "Divorce amiable ou contentieux, garde d'enfants, pension alimentaire, adoption, PACS, concubinage, changement de régime matrimonial.",
  },
  {
    title: "Droit pénal",
    subtitle: "Correctionnel & criminel",
    description:
      "Défense des victimes et des mis en cause : violences conjugales, préjudice corporel, trafic de stupéfiants, agressions sexuelles.",
  },
  {
    title: "Droit immobilier",
    subtitle: "Construction & propriété",
    description:
      "Problèmes de construction, vices cachés, responsabilité des constructeurs, garantie décennale, conflits de voisinage.",
  },
  {
    title: "Droit des contrats",
    subtitle: "Responsabilité & assurances",
    description:
      "Analyse des contrats, droit des assurances, relations entre assurés et assureurs, conseil et procédures adaptées.",
  },
] as const;

const specialites = ["Famille", "Pénal", "Immobilier", "Assurances"] as const;
---

<BaseLayout
  title="Anne Rabaey — Avocat & Médiateur — DRB Avocats"
  description="Anne Rabaey, avocat et médiateur à Cherbourg. Spécialisée en droit de la famille, droit pénal, droit immobilier et droit des assurances."
  currentPath="/anne-rabaey"
>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-navy">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <a
        href="/equipe"
        class="inline-flex items-center gap-2 text-white/50 hover:text-white transition-colors text-sm mb-8"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
        </svg>
        Retour à l'équipe
      </a>
      <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
        Avocat & Médiateur
      </p>
      <h1
        class="text-4xl lg:text-5xl font-display font-light text-white leading-tight"
      >
        Anne Rabaey
      </h1>
    </div>
  </section>

  <!-- Profile -->
  <section class="py-32 bg-cream">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-start">
        <!-- Image -->
        <div class="relative">
          <div class="aspect-[3/4] overflow-hidden bg-sand">
            <img
              src="https://le-de.cdn-website.com/e7b4430ff46446b59fbb67b6af12a95d/dms3rep/multi/opt/b6669fb7-269c-40fd-837b-129885ee29ab-1600-1920w.jpg"
              alt="Anne Rabaey"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="absolute -bottom-6 -right-6 p-8 bg-gold text-navy">
            <p class="text-xs tracking-wider uppercase mb-1 opacity-60">
              Serment
            </p>
            <p class="font-display font-medium">12 janvier 1999</p>
            <p class="text-sm opacity-80">Barreau de Caen</p>
          </div>
        </div>

        <!-- Bio -->
        <div>
          <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
            Parcours
          </p>
          <h2
            class="text-3xl lg:text-4xl font-display font-light text-navy leading-tight mb-8"
          >
            Une avocate<br />
            <span class="font-medium">engagée</span>
          </h2>
          <div class="space-y-6 text-charcoal/70 leading-relaxed">
            <p>
              Titulaire d'un troisième cycle DESS en Droit des Assurances, j'ai
              prêté serment à Caen le 12 janvier 1999.
            </p>
            <p>
              Attachée au Nord Cotentin où se trouvent mes racines familiales,
              j'ai choisi d'intégrer le Barreau de Cherbourg.
            </p>
            <p>
              Après plusieurs années de collaboration, j'ai développé seule mon
              activité en 2006, puis fondé la SELARL DRB AVOCATS en 2010 en
              m'associant avec Caroline Bot.
            </p>
            <p class="text-navy font-medium">
              Titulaire d'un DU de Médiateur (IFOMENE), j'exerce également en
              cette qualité pour vous aider à trouver des solutions amiables.
            </p>
          </div>

          <div class="mt-12 pt-8 border-t border-sand">
            <p class="text-xs tracking-wider uppercase text-charcoal/40 mb-4">
              Domaines principaux
            </p>
            <div class="flex flex-wrap gap-3">
              {
                specialites.map((specialite) => (
                  <span class="text-sm text-navy border border-navy/20 px-4 py-2">
                    {specialite}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Domaines d'intervention -->
  <section class="py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-20">
        <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
          Expertise
        </p>
        <h2 class="text-3xl lg:text-4xl font-display font-light text-navy">
          Domaines<br />
          <span class="font-medium">d'intervention</span>
        </h2>
      </div>

      <div class="grid sm:grid-cols-2 gap-px bg-sand/50">
        {
          domaines.map((domaine) => (
            <div class="bg-white p-10 hover:bg-cream transition-colors duration-300">
              <p class="text-gold text-xs tracking-wider uppercase mb-3">
                {domaine.subtitle}
              </p>
              <h3 class="text-lg font-display font-medium text-navy mb-3">
                {domaine.title}
              </h3>
              <p class="text-sm text-charcoal/50 leading-relaxed">
                {domaine.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-32 bg-navy text-white">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-light mb-8">
        Une question ?
      </h2>
      <p class="text-white/50 leading-relaxed mb-12 max-w-xl mx-auto">
        Je suis à votre disposition pour vous conseiller et vous accompagner
        dans vos démarches juridiques.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 bg-gold text-navy font-medium text-sm tracking-wide hover:bg-gold-light transition-all duration-300"
        >
          Prendre rendez-vous
        </a>
        <a
          href="tel:0233941355"
          class="inline-flex items-center justify-center px-8 py-4 border border-white/20 text-white text-sm tracking-wide hover:bg-white/5 transition-all duration-300"
        >
          02 33 94 13 55
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
