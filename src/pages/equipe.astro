---
import BaseLayout from "../layouts/BaseLayout.astro";

const avocates = [
  {
    name: "Anne Rabaey",
    role: "Avocat & Médiateur",
    description:
      "Spécialisée en droit de la famille, droit pénal, droit immobilier et droit des assurances. Titulaire d'un DU de Médiateur.",
    specialites: ["Famille", "Pénal", "Immobilier", "Assurances"],
    image:
      "https://le-de.cdn-website.com/e7b4430ff46446b59fbb67b6af12a95d/dms3rep/multi/opt/b6669fb7-269c-40fd-837b-129885ee29ab-1600-1920w.jpg",
    href: "/anne-rabaey",
  },
  {
    name: "Caroline Bot",
    role: "Avocat • Ancien Bâtonnier",
    description:
      "Spécialisée en responsabilité civile et médicale, droit pénal routier, droit bancaire et droit des baux.",
    specialites: ["Responsabilité", "Pénal routier", "Bancaire", "Baux"],
    image:
      "https://le-de.cdn-website.com/e7b4430ff46446b59fbb67b6af12a95d/dms3rep/multi/opt/e054f26c-6862-4f61-b380-70438c7efb64-1600-1920w.jpg",
    href: "/caroline-bot",
  },
] as const;

const atouts = [
  {
    title: "Expérience",
    description: "Plus de 20 ans d'exercice",
  },
  {
    title: "Compétences",
    description: "Formation continue",
  },
  {
    title: "Réseau",
    description: "Partenaires spécialisés",
  },
  {
    title: "Ancrage",
    description: "Connaissance locale",
  },
] as const;
---

<BaseLayout
  title="L'équipe — DRB Avocats"
  description="Découvrez l'équipe du cabinet DRB Avocats à Cherbourg : Anne Rabaey et Caroline Bot, deux avocates expérimentées à votre service."
  currentPath="/equipe"
>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-navy">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
        Notre équipe
      </p>
      <h1
        class="text-4xl lg:text-5xl font-display font-light text-white leading-tight max-w-3xl"
      >
        Deux avocates expérimentées,<br />
        <span class="font-medium">à votre écoute</span>
      </h1>
    </div>
  </section>

  <!-- Introduction -->
  <section class="py-32 bg-cream">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-start">
        <div>
          <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
            Bienvenue
          </p>
          <h2
            class="text-3xl lg:text-4xl font-display font-light text-navy leading-tight mb-8"
          >
            Un cabinet<br />
            <span class="font-medium">à taille humaine</span>
          </h2>
          <div class="space-y-6 text-charcoal/70 leading-relaxed">
            <p>
              N'hésitez pas à franchir la porte de notre cabinet. La première
              entrevue permettra de faire connaissance et de vous orienter vers
              la meilleure solution.
            </p>
            <p>
              Alliant nos longues expériences et nos personnalités
              complémentaires, nous nous engageons chaque jour pour répondre aux
              besoins de nos clients avec humanité et professionnalisme.
            </p>
            <p class="text-navy font-medium">
              Nos compétences diversifiées nous permettent de vous conseiller et
              défendre devant les juridictions de Normandie et sur tout le
              territoire national.
            </p>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-6">
          {
            atouts.map((atout, index) => (
              <div class="p-8 bg-white border border-sand/50 hover:border-gold/30 transition-all duration-300">
                <span class="text-gold text-xs tracking-wider uppercase mb-3 block opacity-60">
                  0{index + 1}
                </span>
                <h3 class="text-lg font-display font-medium text-navy mb-2">
                  {atout.title}
                </h3>
                <p class="text-sm text-charcoal/50">{atout.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Team Grid -->
  <section class="py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-20">
        <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
          L'Équipe
        </p>
        <h2 class="text-3xl lg:text-4xl font-display font-light text-navy">
          Découvrez<br />
          <span class="font-medium">nos avocates</span>
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        {
          avocates.map((avocate) => (
            <a href={avocate.href} class="group block">
              <div class="relative overflow-hidden mb-8">
                <div class="aspect-[3/4] overflow-hidden bg-sand">
                  <img
                    src={avocate.image}
                    alt={avocate.name}
                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105"
                  />
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-navy/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
              </div>
              <div>
                <p class="text-gold text-xs tracking-wider uppercase mb-2">
                  {avocate.role}
                </p>
                <h3 class="text-2xl font-display font-medium text-navy mb-3 group-hover:text-gold transition-colors duration-300">
                  {avocate.name}
                </h3>
                <p class="text-sm text-charcoal/50 leading-relaxed mb-6">
                  {avocate.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-6">
                  {avocate.specialites.map((specialite) => (
                    <span class="px-3 py-1 bg-sand/50 text-charcoal/60 text-xs">
                      {specialite}
                    </span>
                  ))}
                </div>
                <span class="inline-flex items-center gap-2 text-sm text-navy group-hover:text-gold transition-colors duration-300">
                  Voir le profil
                  <svg
                    class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Réseau -->
  <section class="py-32 bg-navy text-white">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <p class="text-gold text-sm tracking-super-wide uppercase mb-6">
        Notre réseau
      </p>
      <h2 class="text-3xl lg:text-4xl font-display font-light mb-8">
        Des compétences<br />
        <span class="font-medium">pluridisciplinaires</span>
      </h2>
      <p class="text-white/50 leading-relaxed mb-12 max-w-2xl mx-auto">
        Nos relations privilégiées avec des confrères spécialisés et d'autres
        professionnels (notaires, huissiers, experts-comptables) nous permettent
        de vous proposer un accompagnement complet pour gérer vos situations et
        contentieux.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-3 px-8 py-4 bg-gold text-navy font-medium text-sm tracking-wide hover:bg-gold-light transition-all duration-300"
      >
        Prendre rendez-vous
      </a>
    </div>
  </section>
</BaseLayout>
