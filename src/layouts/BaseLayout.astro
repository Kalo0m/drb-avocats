---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  readonly title: string;
  readonly description?: string;
  readonly currentPath?: string;
  readonly isTransparentHeader?: boolean;
}

const {
  title,
  description = "DRB Avocats - Cabinet d'avocats à Cherbourg-en-Cotentin. Anne RABAEY et Caroline BOT vous accompagnent en droit de la famille, droit pénal, droit immobilier et droit des affaires.",
  currentPath = '',
  isTransparentHeader = false,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0c1821" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Google Fonts - Modern & Elegant -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Outfit:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_FR" />
    
    <title>{title}</title>
  </head>
  <body class="font-body text-charcoal bg-cream antialiased">
    <Header currentPath={currentPath} isTransparent={isTransparentHeader} />
    
    <main>
      <slot />
    </main>
    
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  ::selection {
    background-color: #c9a227;
    color: white;
  }
  
  :focus-visible {
    outline: 2px solid #c9a227;
    outline-offset: 2px;
  }

  /* Smooth fade-in animation */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fadeUp 0.6s ease-out forwards;
  }

  .animate-delay-100 { animation-delay: 0.1s; }
  .animate-delay-200 { animation-delay: 0.2s; }
  .animate-delay-300 { animation-delay: 0.3s; }
  .animate-delay-400 { animation-delay: 0.4s; }
</style>
